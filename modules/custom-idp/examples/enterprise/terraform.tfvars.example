# Example terraform.tfvars file for enterprise deployment
# Copy this file to terraform.tfvars and customize as needed

# Basic Configuration
aws_region  = "us-east-1"
name_prefix = "enterprise-transfer-idp"
environment = "production"

# VPC Configuration (Enterprise: Use existing VPC)
use_existing_vpc           = true
vpc_id                    = "vpc-12345678"  # Replace with your VPC ID
lambda_security_group_name = "lambda-sg"   # Replace with your security group name

# Lambda Configuration (Enterprise: Higher performance)
lambda_timeout     = 60
lambda_memory_size = 2048

# Identity Provider Configuration
user_name_delimiter = "@@"

# Enterprise Features (Enable all for production)
enable_api_gateway         = true
enable_xray_tracing       = true
enable_monitoring         = true
enable_structured_logging = true

# DynamoDB Configuration (Enterprise: Use existing tables if available)
# existing_users_table_name             = "existing-users-table"
# existing_identity_providers_table_name = "existing-providers-table"
dynamodb_billing_mode = "PAY_PER_REQUEST"  # or "PROVISIONED" for predictable workloads

# Security Configuration (Enterprise: Custom KMS key)
create_kms_key           = true
kms_key_deletion_window  = 30
# existing_kms_key_id    = "arn:aws:kms:REGION:ACCOUNT-ID:key/KEY-ID"

# Logging Configuration (Enterprise: Extended retention)
log_level             = "INFO"  # or "DEBUG" for troubleshooting
log_retention_in_days = 90

# Transfer Family Configuration (Enterprise: Multiple protocols)
transfer_protocols       = ["SFTP", "FTPS"]
transfer_security_policy = "TransferSecurityPolicy-2023-05"
custom_domain_enabled    = false  # Set to true if using EFS

# Monitoring Configuration (Enterprise: SNS notifications)
# sns_alarm_topic_arn = "arn:aws:sns:REGION:ACCOUNT-ID:transfer-alerts"

# Enterprise Tags (Required for compliance and cost allocation)
tags = {
  Environment    = "production"
  Project        = "transfer-family-custom-idp"
  Owner          = "platform-team"
  CostCenter     = "engineering"
  Compliance     = "SOC2"
  Backup         = "Required"
  ManagedBy      = "terraform"
  Example        = "enterprise"
  
  # Add your organization-specific tags
  # BusinessUnit   = "finance"
  # Application    = "file-transfer"
  # DataClass      = "confidential"
}